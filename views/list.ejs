<%- include('header'); -%>

<div class="box" id="heading"><h1><%= listTitle %></h1></div>

<div class="box">
  <% newListItem.forEach((item) => { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= item %></p>
  </div>
  <% }) %>
  <form class="item" action="/" method="POST">
    <button type="submit" name="list" value="<%= listTitle %>">+</button
    ><input
      autocomplete="off"
      placeholder="Add a new todo"
      name="newTodo"
      type="text"
    />
  </form>
</div>

<%- include('footer'); -%>
